// Exercício 1 - Calculadora de IMC

let peso = 80;
let altura = 1.65;

altura = altura * altura;

let calculoImc = peso / altura;

console.log(`O IMC é ${calculoImc}`);

// Exercício 2 - Fahrenheit x Celsius

let celsius = 35;
let fahrenheit = celsius * 1.8 + 32;

console.log(`Temperatura em Celsius ${celsius} é semelhante a temperatura em fahrenheit ${fahrenheit}.`);

// Exercício 3 - Desconto do tênis

let valorTenis = 110;
let dinheiroDisponível = 50;

let desconto = dinheiroDisponível * 100 / valorTenis;

console.log(`Valor do desconto deve ser de ${desconto}`);


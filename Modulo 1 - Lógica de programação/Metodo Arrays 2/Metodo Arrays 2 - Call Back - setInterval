// criando um contador

let numeroInicial = 0;
const contador = setInterval(function () {
  console.log(numeroInicial);
  numeroInicial++
}, 1000);



// criando um contador de contagem regressiva

let numero = 10;

const contadorRegressivo = setInterval(function () {
  console.log(numero);
  numero--

  if (numero === 0) {
    console.log('TERMINOU');
    clearInterval(contadorRegressivo);
  }
}, 1000);

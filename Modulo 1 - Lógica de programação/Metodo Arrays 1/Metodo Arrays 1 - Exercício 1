function palavraInvertida(texto) {
  const arrayDeLetras = texto.split('');
  const arrayInvertido = arrayDeLetras.reverse();

  let textoInvertido = '';

  for (let letra of arrayDeLetras) {
    textoInvertido += letra;
  }
  console.log(textoInvertido);
}

palavraInvertida('bola no p√©');
// Retirando uma palavra através do método Slice, retornando as letras retiradas/ extraídas conforme o número informado no método; caso não seja localizado, retornará -1.

const nome = 'ricardo';
console.log(nome.slice(-3));
// irá contar de trás para frente até o número apontado, que no caso é -3.

const nome1 = 'ricardo';
console.log(nome1.slice(7));
// retornará como "empty string" / string vazia.

const cidade = 'Salvador-BA'

console.log(cidade.slice(0, -3));

let estado = cidade.slice(9);
console.log(estado);